{
  "name": "threedviewer",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": "^22.0.0",
    "npm": "^10.5.0"
  },
  "scripts": {
    "prebuild": "node scripts/copy-decoders.mjs",
    "build": "vite build",
  "postbuild": "npm run size:check",
    "dev": "vite --mode development build",
    "watch": "vite --mode development build --watch",
    "copy-decoders": "node scripts/copy-decoders.mjs",
    "lint": "eslint src",
    "stylelint": "stylelint src/**/*.vue src/**/*.scss src/**/*.css",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "size:check": "node scripts/check-bundle-size.mjs",
    "test:smoke": "npm run build && playwright test tests/smoke",
    "test:smoke:headed": "npm run build && playwright test tests/smoke --headed"
  },
  "type": "module",
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "dependencies": {
    "@nextcloud/vue": "^8.29.2",
    "three": "^0.169.0",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@nextcloud/browserslist-config": "^3.0.1",
    "@nextcloud/eslint-config": "^8.4.2",
    "@nextcloud/stylelint-config": "^3.1.0",
    "@nextcloud/vite-config": "^1.5.2",
    "vite": "^7.1.3",
    "@playwright/test": "^1.47.0"
  }
}
